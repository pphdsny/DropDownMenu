<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 筛选tab -->
        <FrameLayout
            android:id="@+id/filter_wrap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_bg_color">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="@color/tab_divide_color" />

            <LinearLayout
                android:id="@+id/ll_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/filter_layout_height"
                android:orientation="horizontal">

            </LinearLayout>
        </FrameLayout>

        <!-- 筛选下拉 -->
        <FrameLayout
            android:id="@+id/fl_filter_wrap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:id="@+id/bg_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/tab_filter_bg_color" />

            <FrameLayout
                android:id="@+id/fl_filter_body_wrap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" />

        </FrameLayout>

    </LinearLayout>
</layout>